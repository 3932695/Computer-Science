# Define the color codes
BLUE="\033[0;34m"
DARK_RED="\033[1;31m"
GREEN="\033[0;32m"
NO_COLOR="\033[0m"

shell="Bash"
echo -e "The best shell is: $shell"
echo -e "The best shell is: $BLUE$shell$NO_COLOR"
echo -e "The best shell is: $DARK_RED$shell$NO_COLOR"
echo -e "The best shell is: $GREEN$shell$NO_COLOR"
